				cout << "5. Пятая задача" << endl;
				cout << "6. Шестая задача" << endl;
				cout << "7. Седьмая задача" << endl;
				cout << "8. Выход" << endl;

				cout << "Введите номер задания: ";
				cin >> fin;

				switch (fin) {
				case 1:
					system("cls");
